<Application x:Class="Storage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <Style x:Key="Header" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <Style x:Key="FormTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Padding" Value="3,2" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <Style x:Key="FormLabel" TargetType="{x:Type Label}">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,-2,0,4" />
        </Style>
    </Application.Resources>

</Application>